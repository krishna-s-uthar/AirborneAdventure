
  import java.awt.Color;
  import java.awt.Graphics2D;
  import java.awt.event.MouseEvent;
  import java.awt.event.MouseListener;
  public class Clicky implements MouseListener {
    private AirborneAdventure gamePanel;

    private boolean startLevel2 = false;
    private boolean startLevel3 = false;
    private boolean startLevel4 = false;
    private boolean startLevel5 = false;
    private boolean isInstructions = false;
    private boolean isBackstory = false;
    private boolean isOnHomeScreen = true;
    private boolean flash = false;
    private boolean gameOver = false;
    public Clicky(AirborneAdventure gamePanel) {
        this.gamePanel = gamePanel;
        
    }
    public boolean getstartLevel2()
    {
  	  return startLevel2;
    }
    
    public void setStartLevel2(boolean value)
    {
  	  this.startLevel2 = value;
    }
    
    public boolean getstartLevel3()
    {
  	  return startLevel3;
    }
    
    public void setStartLevel3(boolean value)
    {
  	  this.startLevel3 = value;
    }
    
    public boolean getstartLevel4()
    {
  	  return startLevel4;
    }
    
    public void setStartLevel4(boolean value)
    {
  	  this.startLevel4 = value;
    }
    
    public boolean getstartLevel5()
    {
  	  return startLevel5;
    }
    
    public void setStartLevel5(boolean value)
    {
  	  this.startLevel5 = value;
    }
    
    public boolean getisInstructions()
    {
  	  return isInstructions;
    }
    
    public boolean getisBackstory()
    {
  	  return isBackstory;
    }
    
    public void setgameOver(boolean value)
    {
  	  this.gameOver = value;
    }
    
    @Override
    public void mouseClicked(MouseEvent e) {
    }
    @Override
    public void mousePressed(MouseEvent e) {
        int mouseX = e.getX();
        int mouseY = e.getY();
        
        //Starting the game(pressing the "START?" button)
        if (mouseX >= 123 && mouseX <= 123 + 139 &&
            mouseY >= 434 && mouseY <= 434 + 40 && isInstructions == false && isBackstory == false &&          
            gamePanel.getGamePhase1() == false ) {
            gamePanel.setGamePhase1(true);
            flash = true;

        }
        
        //After level1 is complete, this button brings you to the next level(Press the "NEXT LEVEL" button)
        if (mouseX >= 170 && mouseX <= 170 + 189 &&
                mouseY >= 493 && mouseY <= 493 + 50 && gamePanel.getLevel1Completed() == true && gamePanel.getisOnLevel1() == true  ) {

      	  	  gamePanel.setisOnLevel1(false);
      	  	  gamePanel.setisOnLevel2(true);
                flash = true;
        }
        
      //Level2 to Level3 
        else if (mouseX >= 170 && mouseX <= 170 + 189 &&
                mouseY >= 493 && mouseY <= 493 + 50 && gamePanel.getisOnLevel2() == true && gamePanel.getENDOFSCREEN() == true ) {
      	  	  gamePanel.setisOnLevel2(false);
      	  	  gamePanel.setisOnLevel3(true);
                flash = true;
        }
        //level3 to 4
        else if (mouseX >= 170 && mouseX <= 170 + 189 &&
                mouseY >= 493 && mouseY <= 493 + 50 && gamePanel.getLevel3Completed() == true &&  gamePanel.getENDOFSCREEN() == true  ) {
      	  gamePanel.setisOnLevel3(false);
  	  	  gamePanel.setisOnLevel4(true);
  	  	  gamePanel.setlevel3Completed(false);
            flash = true;
        }
        
      //level4 to level5
        else if (mouseX >= 170 && mouseX <= 170 + 189 &&
                mouseY >= 493 && mouseY <= 493 + 50 && gamePanel.getisOnLevel4() == true && gamePanel.getENDOFSCREEN() == true ) 
        {
      	  	gamePanel.setisOnLevel4(false);
      	  	gamePanel.setisOnLevel5(true);
              flash = true;
        }
        //Reseting the game(Pressing the "Play again" button)
        if (mouseX >= 199 && mouseX <= 199 + 182 &&
                mouseY >= 460 && mouseY <= 460 + 48 && gameOver == true) {
                gamePanel.reset();    
                flash = true;
        }
        
        //Displaying the INSTRUCTIONS (pressing the "INSTRUCTIONS" button)
        if (mouseX >= 123 && mouseX <= 123 + 139 &&
                mouseY >= 510 && mouseY <= 510 + 40 && gamePanel.getGamePhase1() == false) {
      	  	  isInstructions = true;
                flash = true;
            }
        //Displaying the BackStory (pressing the "STORY" button)
        if (mouseX >= 287 && mouseX <= 287 + 139 &&
                mouseY >= 434 && mouseY <= 434 + 40 && gamePanel.getGamePhase1() == false) {
      	  	  isBackstory = true;
                flash = true;
            }
        //Moving the instructions & Backstory screen off the page(press the red x in the corner)
        if (mouseX >= 24 && mouseX <= 24 + 25 &&
                mouseY >= 25 && mouseY <= 25 + 25 && (isInstructions == true || isBackstory == true)) {
      	  	  isInstructions = false;
      	  	  isBackstory = false;
                flash = true;

            }
        //Start Levels(pressing the "START?" button)
        if (mouseX >= 69 && mouseX <= 69 + 176 &&
                mouseY >= 525 && mouseY <= 525 + 42 && gamePanel.getisOnLevel1() == false && isOnHomeScreen == true) {
      	  if (gamePanel.getisOnLevel2() == true)
      	  {
      	  	  startLevel2 = true;
      	  }
      	  if (gamePanel.getisOnLevel3() == true)
      	  {
      		  startLevel3 = true;
      	  }
      	  if (gamePanel.getisOnLevel4() == true)
      	  {
      		  startLevel4 = true;
      	  }
      	  if (gamePanel.getisOnLevel5() == true)
      	  {
      		  startLevel5 = true;
      	  }
      	  	  flash = true;

            }
        
        
        
        

    }
    @Override
    public void mouseReleased(MouseEvent e) {
        flash = false;

    }
    @Override
    public void mouseEntered(MouseEvent e) {
    }
    @Override
    public void mouseExited(MouseEvent e) {
    }
    
    public void paint(Graphics2D g) {
  		Graphics2D g2d = (Graphics2D) g;
  		Color semiTransparentColor = new Color(255, 255, 255, 220);
  		g2d.setColor(semiTransparentColor);
  		if (flash == true)
  		{
  			g2d.fillRect(0, 0, 530, 800);
  		}
    }
    
  }

